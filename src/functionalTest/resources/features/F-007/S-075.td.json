{
  "title": "must get an error response for a malformed CaseType Id",
  "_guid_": "S-075",
  "_extends_": "F-007_Test_Data_Base",

  "specs": [
    "contains a malformed CaseType Id",
    "is to be made on behalf of CCD Data Store API"
  ],

  "request": {
    "body": {
      "caseId": "1234567890099900",
      "caseTypeId" : "BEFTA_CASETYPE_@£$",
      "documents": [
        {
          "id": "${[scenarioContext][childContexts][Default_Document_Upload_Data][customValues][documentIdInTheResponse]}",
          "hashToken": "${[scenarioContext][childContexts][Default_Document_Upload_Data][testData][actualResponse][body][_embedded][documents][0][hashcode]}"
        }
      ]
    }
  },

  "expectedResponse": {
    "_extends_": "Common_400_Response",
    "body" : {
      "message" : "Exception while attaching the documents to a case :java.lang.IllegalArgumentException: The input parameter: \"BEFTA_CASETYPE_@£$\", does not comply with the required pattern",
      "path" : "/cases/documents/attachToCase"
    }
  }
}
